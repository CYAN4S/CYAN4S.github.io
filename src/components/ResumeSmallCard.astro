---
import type { CollectionEntry } from "astro:content";
import Meta from "./Meta.astro";

type Props = {
  folio: CollectionEntry<"portfolio">;
  img?: string;
};

const { folio, img = folio.data.heroImage } = Astro.props;
---

<style>
  section {
    margin: 60px 0 24px;
  }

  .head {
    margin: 48px 0 36px;
    align-items: start;
  }

  h3 {
    margin-top: 0;
  }

  img {
    width: 640px;
    margin-bottom: 36px;
  }
</style>

<section>
  <div class="grid-1-1 head">
    <img src={img} alt={`${folio.data.title}의 대표 이미지`} />
    <div>
      <div>
        <h3>{folio.data.title}</h3>
        <slot name="description" />
      </div>
      <Meta post={folio} />
    </div>
  </div>


  <div class="grid-1-3">
    <p><strong>관련 링크</strong></p>
    <ul>
      {
        folio.data.link && (
          <li>
            서비스 링크 — <a href={folio.data.link}>{folio.data.link}</a>
          </li>
        )
      }
      {
        folio.data.repo && (
          <li>
            리포지토리 링크 — <a href={folio.data.repo}>{folio.data.repo}</a>
          </li>
        )
      }
    </ul>
    <p><strong>개발 시기</strong></p>
    <slot name="period" />
  </div>

  <hr />
</section>
