---
import type { CollectionEntry } from "astro:content";
import Meta from "./Meta.astro";

type Props = {
  folio: CollectionEntry<"portfolio">;
  img?: string;
};

const { folio, img = folio.data.heroImage } = Astro.props;
---

<style>
  .head {
    display: grid;
    gap: var(--gap);
    grid-template-columns: 1fr 1fr;
    margin: 60px 0 24px;
  }

  h3 {
    margin-top: 0;
  }

  img {
    margin-bottom: 36px;
  }
</style>

<div class="head">
  <h3>{folio.data.title}</h3>
  <div>
    <slot name="description" />
  </div>
</div>

<Meta post={folio} />
<img src={img} alt={`${folio.data.title}의 대표 이미지`} />

<div class="grid-1-3">
  <p><strong>관련 링크</strong></p>
  <ul>
    {folio.data.link && <li>서비스 링크 — <a href={folio.data.link}>{folio.data.link}</a></li>}
    {folio.data.repo && <li>리포지토리 링크 — <a href={folio.data.repo}>{folio.data.repo}</a></li>}
  </ul>

  <p><strong>개발 기간</strong></p>
  <slot name="period" />

  <p><strong>프로젝트 목적</strong></p>
  <slot name="purpose" />

</div>
