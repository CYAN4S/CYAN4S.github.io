---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import type { ImageMetadata } from "astro";

type Props = {
  title?: string;
  description?: string;
  heroImage?: ImageMetadata;
  seamless?: boolean;
} & Record<string, any>;

const { title, description, heroImage, seamless, ...props } = Astro.props;
---

<!DOCTYPE html>
<html lang="ko" {...props}>
  <head>
    <BaseHead title={title} description={description} image={heroImage} />
    <slot name="style" />
  </head>
  <body>
    <Header title={title} />
    <main style={seamless ? "" : "margin-top: 80px"}>
      <slot />
    </main>
  </body>
</html>
