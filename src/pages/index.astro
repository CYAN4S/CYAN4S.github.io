<style lang="scss">
  section {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    background-color: transparent;
  }

  #title {
    background-color: transparent;

    div {
      font: 800 4rem "Plus Jakarta Sans";
      color: var(--cyan);
      background-color: #f5f5f580;
      display: flex;
      overflow: hidden;
    }

    .a {
      animation-duration: 1s;
      animation-name: slideup;
      animation-fill-mode: both;
    }
  }

  @keyframes slideup {
    from {
      transform: translate(0, 90%);
    }
    to {
      transform: none;
    }
  }

  #i-1 {
    display: flex;
  }

  .t {
    display: grid;
    grid-template-columns: 1fr 400px;
    align-items: stretch;
    justify-content: space-between;
    background-color: white;
    margin: var(--gap) auto;
    max-width: 1080px;
    gap: var(--gap);
    border-radius: var(--gap);
    overflow: hidden;
    box-shadow: 0px 16px 16px -8px #00b8a922;
  }

  .t-1 {
    padding: var(--gap);
    margin: auto;
  }

  .t-2 {
    background-color: var(--cyan);
  }
</style>

